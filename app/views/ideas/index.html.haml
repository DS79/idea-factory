%h5 
  Idea Factory
  .pull-right= link_to 'New Idea', "javascript:void(0)", class: "btn btn-primary newidea"
%hr

= render 'form'

- @ideas.each do |idea|
  %h3
    %strong= idea.title
  %br/
  %p= idea.description
  
  %p By: #{idea.user.email}

  %p.pull-right Members: #{idea.joins.length}  Likes: #{idea.likes.length} 

  = link_to 'Show', idea
  = link_to 'Edit', edit_idea_path(idea)
  = link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }
  %hr  
%br/
